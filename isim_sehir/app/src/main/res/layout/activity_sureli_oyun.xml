<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sureli_oyun">

    <TextView
        android:id="@+id/toplamPuan2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:text="Toplam Puan :"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/sure"
        app:layout_constraintEnd_toEndOf="@+id/sure"
        app:layout_constraintStart_toStartOf="@+id/sure" />

    <TextView
        android:id="@+id/ipucu2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:text="6 harfli ilimiz"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtKelime2"
        app:layout_constraintEnd_toEndOf="@+id/txtKelime2"
        app:layout_constraintStart_toStartOf="@+id/txtKelime2" />

    <TextView
        android:id="@+id/txtKelime2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="62dp"
        android:text="- - - - - - "
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtTahmin2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txtTahmin2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:ems="10"
        android:hint="Tahmininizi giriniz"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/btnTahmin2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnTahmin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="39dp"
        android:text="Tahminde bulun"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnHarf2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnHarf2" />

    <Button
        android:id="@+id/btnHarf2"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="169dp"
        android:text="Harf al"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnTahmin2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/ipucu2"
        app:layout_constraintEnd_toEndOf="@+id/ipucu2"
        app:layout_constraintStart_toStartOf="@+id/ipucu2" />
</androidx.constraintlayout.widget.ConstraintLayout>