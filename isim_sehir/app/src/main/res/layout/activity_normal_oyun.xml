<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".normal_oyun">

    <TextView
        android:id="@+id/toplamPuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Toplam Puan :"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@+id/ipucu"
        app:layout_constraintStart_toStartOf="@+id/ipucu"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ipucu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="6 harfli ilimiz"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txtKelime"
        app:layout_constraintStart_toStartOf="@+id/txtKelime"
        app:layout_constraintTop_toBottomOf="@+id/toplamPuan" />

    <TextView
        android:id="@+id/txtKelime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="71dp"
        android:text="- - - - - - "
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ipucu" />

    <Button
        android:id="@+id/btnHarf"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="170dp"
        android:text="Harf al"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnTahmin"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txtTahmin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:hint="Tahmininizi giriniz"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtKelime" />

    <Button
        android:id="@+id/btnTahmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="41dp"
        android:text="Tahminde bulun"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnHarf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnHarf" />

</androidx.constraintlayout.widget.ConstraintLayout>